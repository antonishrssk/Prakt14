<Window x:Class="Prakt14.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prakt14"
        mc:Ignorable="d"
        Title="Авторизация" Height="150" Width="200" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" FontSize="18" Activated="Window_Activated">
    <StackPanel VerticalAlignment="Center">
        <PasswordBox x:Name="pbPassword" Margin="5" PasswordChar="*"/>
        <Button Content="Войти" Margin="5" IsDefault="True" Click="btnEnter_Click"/>
        <Button Content="Отмена" Margin="5" IsCancel="True" Click="btnEsc_Click"/>
    </StackPanel>
</Window>
